<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:elevation="70px"
    tools:context=".DisplayActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:elevation="20dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="10px"
                android:foregroundGravity="center" />

            <TextView
                android:id="@+id/nametag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile"
                android:text="SampleName"
                android:textColor="#00008F"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usernametag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametag"
                android:text="\@Username"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/agetag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernametag"
                android:paddingTop="20dp"
                android:text="Age: 99"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/strengthtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/agetag"
                android:paddingTop="20dp"
                android:text="'Strengths'"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>